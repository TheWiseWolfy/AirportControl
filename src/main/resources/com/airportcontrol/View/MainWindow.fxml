<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="453.0" prefWidth="700.0" spacing="20.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.airportcontrol.View.MainWindowController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <children>
      <TabPane prefHeight="546.0" prefWidth="430.0" tabClosingPolicy="UNAVAILABLE" VBox.vgrow="ALWAYS">
        <tabs>
          <Tab text="Airports">
               <content>
                  <HBox prefHeight="100.0" prefWidth="200.0">
                     <children>
                        <AnchorPane prefHeight="200.0" prefWidth="200.0" HBox.hgrow="ALWAYS">
                           <children>
                              <Button fx:id="Button1" layoutX="69.0" layoutY="38.0" mnemonicParsing="false" onAction="#insertAirportWindow" text="Add Airport" AnchorPane.leftAnchor="50.0" AnchorPane.rightAnchor="50.0" />
                              <Button fx:id="Button2" layoutX="50.0" layoutY="95.0" mnemonicParsing="false" onAction="#deleteSelectedAirport" text="Remove Selected Airport" AnchorPane.leftAnchor="50.0" AnchorPane.rightAnchor="50.0" />
                           </children>
                        </AnchorPane>
                        <TableView fx:id="airportTableView" prefHeight="200.0" prefWidth="200.0" HBox.hgrow="ALWAYS">
                           <HBox.margin>
                              <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                           </HBox.margin>
                        </TableView>
                     </children>
                  </HBox>
               </content>
          </Tab>
          <Tab text="Avioane">
               <content>
                  <HBox prefHeight="100.0" prefWidth="200.0">
                     <children>
                        <AnchorPane prefHeight="366.0" prefWidth="325.0">
                           <HBox.margin>
                              <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                           </HBox.margin>
                        </AnchorPane>
                        <TableView prefHeight="385.0" prefWidth="256.0">
                           <padding>
                              <Insets top="10.0" />
                           </padding>
                        </TableView>
                     </children>
                  </HBox>
               </content>
          </Tab>
            <Tab text="Pasageri">
               <content>
                  <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0" />
               </content>
            </Tab>
        </tabs>
      </TabPane>
   </children>
</VBox>
